<!-- Default style sheet for displaying a workflow task template in the Info Panel. -->
<rendering xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="XMLRenderingStylesheet_Schema.xsd">
    <header>
        <image source="type"/>
        <property name="object_name"/>
        <property name="object_type" modifiable="false"/>
    </header>
    <page titleKey="tc_xrt_Overview">
        <column>
            <section titleKey="tc_xrt_properties">
                <property name="object_name" modifiable="false"/>
                <content visibleWhen="{pref:WRKFLW_fnd0Instructions_available}!=true">
                    <property name="object_desc"/>
                </content>
                <content visibleWhen="{pref:WRKFLW_fnd0Instructions_available}==true">
                    <property name="fnd0Instructions"/>
                </content>            
                <property name="task_type"/>
                <property name="template_classification"/>
                <property name="template_stage"/>
                <property name="creation_date"/>
                <property name="owning_user"/>
                <property name="last_mod_date"/>
                <property name="last_mod_user"/>
            </section>
        </column>
    </page>
</rendering>
